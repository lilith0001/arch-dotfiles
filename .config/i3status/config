general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "battery 0"
order += "volume master"
order += "cpu_temperature 0"
order += "cpu_usage all"
#order += "memory"
order += "tztime date"
order += "tztime localtime"

battery 0 {
        last_full_capacity = true
        integer_battery_capacity = true
        format = "%status %percentage"# %remaining %emptytime"
        format_down = "No battery"
        status_chr = "CHR:"
        status_bat = "BAT:"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT0/uevent"
        low_threshold = 10
}

volume master {
    format = "VOL: %volume"
    format_muted = "MUTE: (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

cpu_temperature 0 {
    format = "CPU: %degreesC"
}

cpu_usage {
    format = "CPU: %usage"# CPU_0: %cpu0 CPU_1: %cpu1"
}

tztime date {
    format = "%m-%d"
}

tztime localtime {
    #format = "%Y-%-m-%d %I:%M:%S"
    format = "%I:%M"
}

memory {
        format = "MEM: %used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}
